{
  "comment": "Configuration for Terraform with Azure infrastructure projects",
  "tech_stack": "terraform_azure",
  "problem_commands": {
    "validate": ["terraform", "validate"],
    "fmt": ["terraform", "fmt", "-check"],
    "lint": ["tflint"],
    "security": ["tfsec", "."]
  },
  "best_practices_files": ["./best_practices_guides/TERRAFORM_WITH_AZURE_BEST_PRACTICES.md"],
  "chunk_size": 35,
  "agents": 18,
  "session": "claude_agents",
  "stagger": 10.0,
  "wait_after_cc": 15.0,
  "check_interval": 10,
  "skip_regenerate": false,
  "skip_commit": false,
  "auto_restart": true,
  "no_monitor": false,
  "attach": false,
  "prompt_file": "prompts/default_best_practices_prompt_terraform_azure.txt",
  "context_threshold": 20,
  "idle_timeout": 60,
  "max_errors": 3,
  "git_branch": "main",
  "git_remote": "origin",
  "tmux_kill_on_exit": true,
  "tmux_mouse": true,
  "fast_start": false,
  "full_backup": false,
  "max_agents": 50
} 