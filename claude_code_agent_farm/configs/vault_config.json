{
  "comment": "Configuration for HashiCorp Vault policy as code",
  "tech_stack": "vault",
  "problem_commands": {
    "validate": ["vault", "policy", "fmt", "-check"],
    "test": ["vault", "policy", "read"]
  },
  "best_practices_files": ["./best_practices_guides/HASHICORP_VAULT_POLICY_AS_CODE_BEST_PRACTICES.md"],
  "chunk_size": 50,
  "agents": 20,
  "session": "claude_agents",
  "stagger": 10.0,
  "wait_after_cc": 15.0,
  "check_interval": 10,
  "skip_regenerate": false,
  "skip_commit": false,
  "auto_restart": true,
  "no_monitor": false,
  "attach": false,
  "prompt_file": "prompts/default_best_practices_prompt_vault.txt",
  "context_threshold": 20,
  "idle_timeout": 60,
  "max_errors": 3,
  "git_branch": "main",
  "git_remote": "origin",
  "tmux_kill_on_exit": true,
  "tmux_mouse": true,
  "fast_start": false,
  "full_backup": false,
  "max_agents": 50
} 